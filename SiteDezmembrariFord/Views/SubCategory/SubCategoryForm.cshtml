@model SiteDezmembrariFord.ViewModels.SubCategoryFormViewModel
@{
    ViewBag.Title = "SubCategoryForm";
}

<h2>SubCategoryForm</h2>

@using (Html.BeginForm("Save", "SubCategory"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.SubCategory.Name)
        @Html.TextBoxFor(m => m.SubCategory.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SubCategory.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SubCategory.CategoryId)
        @Html.DropDownListFor(m => m.SubCategory.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "Selecteaza categoria", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SubCategory.CategoryId)
    </div>

    @Html.HiddenFor(m => m.SubCategory.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}